<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg"
    >
    <!--标题栏-->
    <include layout="@layout/titlebar"/>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">


        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:text="主页"

            />

        <RadioButton
            android:id="@+id/rb_monitor"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_monitor_drawable_selector"
            android:text="监测"

            />

        <RadioButton
            android:id="@+id/rb_guide"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_guide_drawable_selector"
            android:text="导航" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_setting_drawable_selector"
            android:text="设置" />


    </RadioGroup>

</LinearLayout>