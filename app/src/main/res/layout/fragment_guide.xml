<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="事故地点"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/webv_photo" />

    <TextView
        android:text="现场照片"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/textView5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:layout_width="275dp"
        android:layout_height="186dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/webv_photo" />

    <WebView
        android:layout_width="269dp"
        android:layout_height="277dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="256dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/webv_map" />

    <RelativeLayout
        android:layout_width="85dp"
        android:layout_height="560dp"
        android:background="@drawable/shape_rec"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginStart="280dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="256dp"
            android:id="@+id/btn_call110" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_trojan"
            android:layout_below="@+id/btn_call110"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:id="@+id/btn_call120" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="117dp"
            android:id="@+id/btn_callfamily" />

        <TextView
            android:text="紧急报警"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/background_dark"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27dp"
            android:id="@+id/textView6"
            android:layout_alignEnd="@+id/btn_call110"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:text="联系人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/btn_call110"
            android:layout_marginTop="50dp"
            android:id="@+id/textView7" />

        <TextView
            android:text="120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_call110"
            android:layout_alignStart="@+id/btn_call110"
            android:layout_marginTop="50dp"
            android:id="@+id/textView9" />

        <TextView
            android:text="110"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_below="@+id/btn_callfamily"
            android:layout_alignStart="@+id/btn_call110"
            android:layout_marginTop="52dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>